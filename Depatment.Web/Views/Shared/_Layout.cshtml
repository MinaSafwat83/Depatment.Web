<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Department.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Department.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Department.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start">
                    <ul class="navbar-nav">

                        <!-- Department Module -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="departmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Department Module
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="departmentDropdown">
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Index">Department Tree</a></li>
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="SelectParentDepartments">Get Sub Department</a></li>
                                @* <li><a class="dropdown-item" asp-controller="Department" asp-action="Create">Create Department</a></li> *@
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="ParentDepartments">Parent Departments</a></li>
                            </ul>
                        </li>

                        <!-- Reminder Module -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reminderDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Reminder Module
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reminderDropdown">
                                <li><a class="dropdown-item" asp-controller="Reminders" asp-action="Index">Reminder List</a></li>
                                <li><a class="dropdown-item" asp-controller="Reminders" asp-action="Create">Create Reminder</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Department.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
