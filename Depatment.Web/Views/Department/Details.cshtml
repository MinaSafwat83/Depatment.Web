@model CreateDepDTOForView


<style>
    .department-logo {
        width: 150px; /* Fixed width */
        height: 150px; /* Fixed height */
        border-radius: 10px; /* Rounded corners */
        border: 1px solid #ddd; /* Light grey border */
        object-fit: cover; /* Ensures the image covers the set dimensions without distortion */
    }
</style>

<h1>@Model.Name</h1>

@if (Model.Logo != null)
{
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Logo)" alt="@Model.Name Logo" class="department-logo" />
}

<div>
    <p>Department ID: @Model.Id</p>
    @if (Model.ParentDepartmentId.HasValue)
    {
        <p>Parent Department ID: @Model.ParentDepartmentId</p>
    }
</div>

<a href="@Url.Action("Index", "Department")">Back to List</a>


